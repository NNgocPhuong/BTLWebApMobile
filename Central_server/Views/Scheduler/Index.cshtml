@model List<Central_server.ViewModels.ValveVM>
@{
    ViewData["Title"] = "Custom Valve Schedules";
    Layout = "_LayoutCustom";
}

<div class="container mt-5">
    <h2 class="text-center">Create Schedule for Each Valve</h2>
    <form asp-controller="Scheduler" asp-action="SubmitCustomSchedules" method="post">
        <div class="row">
            <div class="col-12">
                @foreach (var valve in Model)
                {
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4 class="mb-0">
                                @valve.ValveName
                                <span class="badge @(valve.Status == "on" ? "badge-success" : "badge-secondary")">
                                    @(valve.Status == "on" ? "On" : "Off")
                                </span>
                            </h4>
                        </div>
                        <div class="card-body">
                            <input type="hidden" name="Schedules[@valve.ValveId].ValveId" value="@valve.ValveId" />

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="startTime-@valve.ValveId">Start Time:</label>
                                        <input type="datetime-local"
                                               class="form-control"
                                               id="startTime-@valve.ValveId"
                                               name="Schedules[@valve.ValveId].StartTime"
                                               required />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="endTime-@valve.ValveId">End Time:</label>
                                        <input type="datetime-local"
                                               class="form-control"
                                               id="endTime-@valve.ValveId"
                                               name="Schedules[@valve.ValveId].EndTime"
                                               required />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="frequency-@valve.ValveId">Frequency:</label>
                                <input type="text"
                                       class="form-control"
                                       id="frequency-@valve.ValveId"
                                       name="Schedules[@valve.ValveId].Frequency"
                                       placeholder="e.g., Daily, Weekly, etc."
                                       required />
                            </div>

                            <div class="form-group">
                                <label for="status-@valve.ValveId">Status:</label>
                                <select class="form-control"
                                        id="status-@valve.ValveId"
                                        name="Schedules[@valve.ValveId].Status"
                                        required>
                                    <option value="on">On</option>
                                    <option value="off">Off</option>
                                </select>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">Submit Schedules</button>
        </div>
    </form>
</div>

<style>
    .badge-success {
        background-color: green;
    }

    .badge-secondary {
        background-color: gray;
    }
</style>
