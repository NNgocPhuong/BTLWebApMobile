@model Central_server.ViewModels.UserVM

@{
    ViewData["Title"] = "Thông tin chi tiết";
}

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded">
        <div class="row g-0">
            <!-- Ảnh đại diện -->
            <div class="col-md-4 text-center bg-light d-flex align-items-center justify-content-center">
                <img src="~/images/users/@Model.PhotoUrl"
                     alt="@Model.FullName"
                     class="img-fluid rounded-circle shadow"
                     style="width: 200px; height: 200px; object-fit: cover;">
            </div>
            <!-- Thông tin chi tiết -->
            <div class="col-md-8">
                <div class="card-body p-4">
                    <h3 class="card-title text-success">@Model.FullName</h3>
                    <p class="card-text">
                        <strong>Mã số sinh viên:</strong> @Model.StudentId
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Nút hành động -->
    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-warning me-2">
            <i class="bi bi-pencil"></i> Chỉnh sửa
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Quay lại danh sách
        </a>
    </div>
</div>

<style>
    .card-title {
        font-weight: bold;
        font-size: 1.8rem;
    }

    .card-text {
        font-size: 1.2rem;
        color: #555;
    }

    .btn i {
        margin-right: 5px;
    }
</style>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
