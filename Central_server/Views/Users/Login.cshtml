@model Central_server.ViewModels.LoginVM
@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Đăng nhập</h1>
        <form asp-controller="Users" asp-action="Login" asp-route-returnurl="@ViewBag.ReturnUrl" method="post">
            <div class="form-group">
                <label asp-for="@Model.UserName"></label>
                <input type="text" class="form-control" asp-for="@Model.UserName" value="@Model.UserName">
                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Password"></label>
                <input type="password" class="form-control" id="MatKhau" asp-for="@Model.Password">
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary btn-lg">Đăng nhập</button>
                <button asp-action="Index" asp-controller="Home" class="btn btn-primary btn-lg">Huỷ</button>
            </div>
        </form>
    </div>
</div>
