@model Central_server.ViewModels.UserVM

@{
    ViewData["Title"] = "Xóa thành viên";
}

<div class="container py-5">
    <h1 class="text-center text-danger mb-4">Xóa thành viên</h1>
    <p class="text-center fs-5">Bạn có chắc chắn muốn xóa thành viên này không?</p>
    <hr class="mb-5" />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger shadow-sm">
                <div class="card-body p-4">
                    <dl class="row mb-4">
                        <dt class="col-sm-4 fw-bold text-danger">Họ và tên:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FullName)</dd>

                        <dt class="col-sm-4 fw-bold text-danger">Mã số sinh viên:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.StudentId)</dd>

                        <dt class="col-sm-4 fw-bold text-danger">Ảnh đại diện:</dt>
                        <dd class="col-sm-8">
                            <img src="~/images/users/@Model.PhotoUrl" alt="@Model.FullName" class="img-fluid rounded" style="max-height: 150px;" />
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="UserId" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger px-4">
                                <i class="bi bi-trash"></i> Xóa
                            </button>
                            <a asp-action="Index" class="btn btn-secondary px-4">
                                <i class="bi bi-arrow-left"></i> Trở lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
