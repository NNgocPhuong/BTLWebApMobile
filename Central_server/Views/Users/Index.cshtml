@model IEnumerable<Central_server.ViewModels.UserVM>

@{
    ViewData["Title"] = "Danh sách thành viên nhóm";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Danh sách thành viên nhóm</h1>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-person-plus"></i> Thêm thành viên
        </a>
    </div>

    <table class="table table-bordered table-hover align-middle">
        <thead class="table-success text-center">
            <tr>
                <th>Họ và Tên</th>
                <th>Mã Sinh Viên</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.FullName)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.StudentId)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i> Sửa
                        </a>
                        <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-info btn-sm">
                            <i class="bi bi-eye"></i> Chi tiết
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #f1f8e9; /* Màu nền nhạt khi hover */
    }

    .btn-sm i {
        margin-right: 5px; /* Thêm khoảng cách giữa biểu tượng và chữ */
    }
</style>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
